<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="@color/white"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3333"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_status_share_bottom"
            style="@style/ImageViewBottom"
            android:src="@drawable/timeline_icon_retweet"/>

        <TextView
            android:id="@+id/tv_status_share_bottom"
            style="@style/TextViewBody"
            android:layout_marginLeft="8dp"
            android:text="转发"
            android:textColor="@color/txt_light_gray"/>
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:background="@color/divider_gray"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3333"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_status_comment_bottom"
            style="@style/ImageViewBottom"
            android:src="@drawable/timeline_icon_comment"/>

        <TextView
            android:id="@+id/tv_status_comment_bottom"
            style="@style/TextViewBody"
            android:layout_marginLeft="8dp"
            android:text="评论"
            android:textColor="@color/txt_light_gray"/>
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:background="@color/divider_gray"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3333"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_status_like_bottom"
            style="@style/ImageViewBottom"
            android:src="@drawable/timeline_icon_like_sel"/>

        <TextView
            android:id="@+id/tv_status_like_bottom"
            style="@style/TextViewBody"
            android:layout_marginLeft="8dp"
            android:text="点赞"
            android:textColor="@drawable/txtcolor_light_gray2oran_sel"/>
    </LinearLayout>

</LinearLayout>