<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioButtonBottomTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/txtcolor_gray2oran_sel</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txtsize_title</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewSubhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txtsize_subhead</item>
        <item name="android:textColor">@color/txt_black</item>
    </style>

    <style name="TextViewCaption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txtsize_caption</item>
        <item name="android:textColor">@color/txt_light_gray</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_gray</item>
        <item name="android:textSize">@dimen/txtsize_body</item>
    </style>


    <style name="ListViewCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:cacheColorHint">@color/transparent</item>
    </style>

    <style name="ListViewCard" parent="ListViewCommon">
        <item name="android:dividerHeight">8dp</item>
    </style>

    <style name="DialogCommon" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>

    </style>

    <style name="GridViewImages">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numColumns">3</item>
        <item name="android:horizontalSpacing">4dp</item>
        <item name="android:verticalSpacing">4dp</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:cacheColorHint">@color/transparent</item>

    </style>

    <style name="ImageViewBottom">
        <item name="android:scaleY">0.7</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewHeadline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txtsize_headline</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="RadioButtonUserInfoTab">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@drawable/txtcolor_light_gray2oran_sel</item>
        <item name="android:textSize">@dimen/txtsize_subhead</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="TextViewBottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/txtsize_body</item>
        <item name="android:textColor">@color/txt_gray</item>
        <item name="android:text">可以点击的TV</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
